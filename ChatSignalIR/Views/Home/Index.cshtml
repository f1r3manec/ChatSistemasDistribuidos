@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid mt-4 " id="userinfo">
    <div class="row">
        <div class="col-md-5 ">
            <h1 class="display-4 text-light">Bienvenido</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 ">
            <span class="card-title text-light">Para continuar debes ingresar tu nombre </span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control" placeholder="Nombre o nickname" id="username" required autocomplete="off">
        </div>
        <div class="col-md-12">
            <div class="btn-group-sm mt-3">
                <button class="btn btn-info  text-white">Ingresar</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid  pantallaChat" hidden >
    
    <h3 class="text-light"> Signal R Chat</h3>
    <div class="row  mt-3 ">
        <div class="col-md-10 container border border-secondary rounded">
            <div class="row pb-2">
                <div class="col-md-12 pt-3 messsagearea">
                    <ul id="messsageList" >
                      
                    </ul>
                </div>

                <div class="col-md-11 border-top  border-secondary">
                    <input type="text" class="message rounded border-0 mt-2 mb-1 w-100" id="message" autocomplete="off">
                </div>
                <div class="col-md-1 border-top border-secondary">
                    <i class="far fa-paper-plane w-100" id="sendButton"></i>

                </div>
            </div>
        </div>
        <div class="col-md-2 container border border-secondary rounded">
            <div class="row">
                <div class="col-md-12 mt-2">
                    <span class="text-light"> Participantes</span>
                    <ul id="ListaParticipantes" class="mt-2">
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/Chat.js"></script>